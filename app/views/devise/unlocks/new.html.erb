<body class="login">
<div class="container" align="center" style="margin-top: 200px;margin-bottom: 180px; color: white">
  
<h2><%= t('.resend_unlock_instructions') %></h2><br/>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <div class="col-12 col-sm-8 col-md-6">
    <%= devise_error_messages! %>
  </div>

  <div class="field col-12 col-sm-8 col-md-5" align="left">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div><br/>
<% end %>

<%= render "devise/shared/links" %> <%= f.submit t('.resend_unlock_instructions'), class: "btn btn-warning" %>

</div>
</body>